    "gulp": "^4.0.2",
    "mocha": "^8.0.1",
    "nyc": "^15.0.0",
    "prettier": "^2.0.5",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0",
