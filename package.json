    "@types/gulp": "^4.0.6",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.4",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^9.0.3",
    "@types/sinon-chai": "^3.2.3",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "axios": "^0.19.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
